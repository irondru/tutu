.main-menu {
    padding: 0;
    margin: 50px 0 0 0;
    background: #BC262C url(<%= asset_path 'header_menu_bg.gif' %>) repeat-x;
    width: 100%;
    list-style: none;
    float: left;
    font-size: 12px;
}

.main-menu li {
    display: inline-block;
    margin-right: 5px;
}

.main-menu li a.root-item {
    color: #fff;
    font-weight: bold;
}

.main-menu a {
    display: block;
    padding: 0.5em 1.0em;
    text-decoration: none;
    text-align: center;
}

.main-menu a:hover {
    text-decoration: underline;
}

.main-menu li:hover a.root-item {
    background: #e26336;
    color: #fff;
}

.main-menu li ul {
    position: absolute;
    padding: 0;
    top: auto;
    display: none;
    z-index: 500;
    height: auto;
    width: 16em;
    background: #FBFCFD;
    border: 1px solid #C4CCD6;
}

.main-menu li li {
    width: 100%;
    margin: 0;
    border-bottom: 1px solid #C4CCD6;
}

.main-menu li ul a {
    text-align: left;
}

.main-menu li:hover {
    background: #DAE1E9;
    color: #fff;
}

.main-menu li:hover li:hover a {
    color: #4F4F4F;
}

.main-menu li a {
    color: #4F4F4F;
    font-weight: bold;
}

.main-menu li:hover ul ul {
    display: none;
}

.main-menu li:hover ul {
    display: block;
}