.alert-box {
    color: #555;
    border-radius: 5px;
    font-family: Tahoma, Geneva, Arial, sans-serif;
    font-size: 12px;
    padding: 10px 36px;
    margin-top: 80px;
    margin-bottom: -20px;
}

.alert {
    background: #ffecec url(<%= asset_path 'error.png' %>) no-repeat 10px 50%;
    border: 1px solid #f5aca6;
}

.notice {
    background: #e9ffd9 url(<%= asset_path 'success.png' %>) no-repeat 10px 50%;
    border: 1px solid #a6ca8a;
}
