<h1><%= t('.title') %></h1>
<%= form_for resource, as: resource_name,
             url: registration_path(resource_name), html: {class: 'form-style'} do |f| %>
    <ul>
    <%= devise_error_messages! %>
      <li>
        <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), autofocus: true, class: 'field-style' %>
      </li>
      <li>
        <%= f.text_field :first_name, placeholder: t('activerecord.attributes.user.first_name'), class: 'field-style' %>
      </li>
      <li>
        <%= f.text_field :last_name, placeholder: t('activerecord.attributes.user.last_name'), class: 'field-style' %>
      </li>
      <li>
        <%= f.password_field :password,
                             placeholder: t('.password', min_length: @minimum_password_length), autocomplete: "off",
                             class: 'field-style' %>
      </li>
      <li>
        <%= f.password_field :password_confirmation,
                             placeholder: t('.password_again'), autocomplete: "off", class: 'field-style' %>
      </li>
      <li>
        <%= render "devise/shared/links" %>
      </li>
      <li>
        <%= f.submit t('.submit') %>
      </li>
    </ul>
<% end %>